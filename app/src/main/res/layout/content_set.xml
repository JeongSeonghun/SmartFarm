<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jeong.yolosmartplanter.SetActivity"
    tools:showIn="@layout/activity_set"
    android:background="@drawable/background2">

    <ImageView
        android:layout_width="96dp"
        android:layout_height="30dp"
        android:id="@+id/imageView3"
        android:src="@drawable/autotext"
        android:layout_above="@+id/tableLayout5" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:showText="true"
        android:textOn="On"
        android:textOff="Off"
        android:id="@+id/setbt"
        android:checked="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/save1"
        android:layout_marginTop="20dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/tableLayout5"
        android:layout_below="@+id/setbt"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="56dp"
                android:layout_height="22dp"
                android:id="@+id/imageView4"
                android:src="@drawable/pumptext" />

            <ImageView
                android:layout_width="39dp"
                android:layout_height="22dp"
                android:id="@+id/imageView5"
                android:src="@drawable/starttext"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="0dp" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="22dp"
                android:id="@+id/imageView10"
                android:src="@drawable/stop"
                android:layout_marginLeft="20dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="64dp"
                android:layout_height="20dp"
                android:id="@+id/imageView18"
                android:src="@drawable/msoiltext"
                android:layout_marginTop="11dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stsoil"
                android:text="0"
                android:layout_marginLeft="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spsoil"
                android:text="0"
                android:layout_marginLeft="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:layout_gravity="right">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:id="@+id/imageView19"
                android:src="@drawable/wattext"
                android:layout_marginTop="11dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView29" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spwat"
                android:text="0"
                android:layout_marginLeft="20dp" />
        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장"
        android:id="@+id/save1"
        android:onClick="saveclick"
        android:layout_below="@+id/tableLayout5"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:layout_width="53dp"
        android:layout_height="30dp"
        android:id="@+id/imageView20"
        android:src="@drawable/alramtext"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/save1"
        android:layout_marginTop="25dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:showText="true"
        android:textOn="On"
        android:textOff="Off"
        android:id="@+id/albt"
        android:checked="false"
        android:layout_marginLeft="15dp"
        android:layout_above="@+id/tableLayout6"
        android:layout_toEndOf="@+id/imageView20" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout6"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView20"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView" />

            <ImageView
                android:layout_width="39dp"
                android:layout_height="22dp"
                android:id="@+id/imageView21"
                android:src="@drawable/setingtext" />

            <ImageView
                android:layout_width="39dp"
                android:layout_height="22dp"
                android:id="@+id/imageView22"
                android:src="@drawable/uptext"
                android:layout_marginLeft="20dp" />

            <ImageView
                android:layout_width="39dp"
                android:layout_height="22dp"
                android:id="@+id/imageView23"
                android:src="@drawable/downtext"
                android:layout_marginLeft="20dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:id="@+id/imageView24"
                android:src="@drawable/mtemptext"
                android:layout_marginTop="10dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:showText="true"
                android:textOn="On"
                android:textOff="Off"
                android:id="@+id/altemp"
                android:checked="false"
                android:layout_marginLeft="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/utemp"
                android:text="0"
                android:layout_marginLeft="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dtemp"
                android:text="0"
                android:layout_marginLeft="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:id="@+id/imageView25"
                android:src="@drawable/mhumtext"
                android:layout_marginTop="10dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:showText="true"
                android:textOn="On"
                android:textOff="Off"
                android:id="@+id/alhum"
                android:checked="false"
                android:layout_marginLeft="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/uhum"
                android:text="0"
                android:layout_marginLeft="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dhum"
                android:text="0"
                android:layout_marginLeft="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="64dp"
                android:layout_height="20dp"
                android:id="@+id/imageView26"
                android:src="@drawable/msoiltext"
                android:layout_marginTop="10dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:showText="true"
                android:textOn="On"
                android:textOff="Off"
                android:id="@+id/alsoil"
                android:checked="false"
                android:layout_marginLeft="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/usoil"
                android:text="0"
                android:layout_marginLeft="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dsoil"
                android:text="0"
                android:layout_marginLeft="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="57dp"
                android:layout_height="20dp"
                android:id="@+id/imageView27"
                android:src="@drawable/mwattext"
                android:layout_marginTop="10dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:showText="true"
                android:textOn="On"
                android:textOff="Off"
                android:id="@+id/alwat"
                android:checked="false"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView39" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dwat"
                android:text="0"
                android:layout_marginLeft="20dp" />
        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장"
        android:id="@+id/save2"
        android:onClick="save2click"
        android:layout_below="@+id/tableLayout6"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장"
        android:id="@+id/ipSaveBt"
        android:onClick="ipSaveBtClicked"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/save2"
        android:layout_marginTop="5dp"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="IP Address"
            android:id="@+id/textView7"
            android:layout_below="@+id/save2"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iptext"
            android:text="192.168.240.1" />

    </LinearLayout>

</RelativeLayout>
